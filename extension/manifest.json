{
    "manifest_version": 3,
    "name": "WorkGraph Ingestor",
    "version": "1.0.0",
    "description": "Capture knowledge from the web directly into your WorkGraph.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://*.supabase.co/"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "WorkGraph Settings"
    },
    "icons": {
        "16": "public/icon16.png",
        "48": "public/icon48.png",
        "128": "public/icon128.png"
    }
}
{
    "manifest_version": 3,
    "name": "WorkGraph OS Layer",
    "version": "1.0.0",
    "description": "Inject WorkGraph OS directly into any webpage.",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "notifications",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icon*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Toggle WorkGraph OS Overlay"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
{
    "manifest_version": 3,
    "name": "WorkGraph OS Extension",
    "version": "1.1.0",
    "description": "Inject WorkGraph OS directly into any webpage with Side Panel & AI Integration.",
    "permissions": [
        "sidePanel",
        "offscreen",
        "activeTab",
        "scripting",
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.tsx"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icon*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "Open WorkGraph Side Panel"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}